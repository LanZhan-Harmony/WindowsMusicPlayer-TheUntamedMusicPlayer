<winuiex:WindowEx x:Class="UntamedMusicPlayer.Views.DesktopLyricWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="using:UntamedMusicPlayer.Views"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:model="using:UntamedMusicPlayer.Models"
                  xmlns:winuiex="using:WinUIEx"
                  mc:Ignorable="d">

    <Grid x:Name="Draggable" VerticalAlignment="Top">
        <Border x:Name="AnimatedBorder"
                Height="55"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="Black" CornerRadius="30">
            <TextBlock x:Name="LyricContent"
                       Width="{x:Bind GetTextBlockWidth(model:Data.LyricManager.CurrentLyricContent), Mode=OneWay}"
                       Height="{x:Bind GetTextBlockHeight(model:Data.LyricManager.CurrentLyricContent), Mode=OneWay}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="{x:Bind model:Settings.FontFamily}"
                       FontSize="32" Foreground="#FDFDFD"
                       MaxLines="2"
                       SizeChanged="LyricContentTextBlock_SizeChanged"
                       Text="{x:Bind model:Data.LyricManager.CurrentLyricContent, Mode=OneWay}"/>
        </Border>
    </Grid>
    <Window.SystemBackdrop>
        <winuiex:TransparentTintBackdrop/>
    </Window.SystemBackdrop>
</winuiex:WindowEx>
