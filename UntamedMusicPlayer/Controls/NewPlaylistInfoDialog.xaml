<ContentDialog x:Uid="NewPlaylistInfoDialog"
               x:Class="UntamedMusicPlayer.Controls.NewPlaylistInfoDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:local="using:UntamedMusicPlayer.Controls"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               CloseButtonClick="CloseButtonClick"
               DefaultButton="Primary"
               PrimaryButtonClick="CreateButtonClick"
               Style="{StaticResource DefaultContentDialogStyle}"
               mc:Ignorable="d">
    <Grid>
        <StackPanel Spacing="16">
            <Border x:Name="CoverBorder"
                    Width="120" Height="120"
                    Padding="0"
                    Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
                    CornerRadius="5">
                <FontIcon FontFamily="{StaticResource UntamedFontFamily}"
                          FontSize="40"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          Glyph="&#xED3B;"/>
            </Border>
            <TextBox x:Name="NameTextBox" x:Uid="PlaylistInfo_UntitledPlaylist1"
                     Width="290"
                     HorizontalAlignment="Center"
                     TextChanged="NameTextBox_TextChanged"/>
        </StackPanel>
    </Grid>
</ContentDialog>
