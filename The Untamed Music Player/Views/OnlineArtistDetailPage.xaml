<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="The_Untamed_Music_Player.Views.OnlineArtistDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:contract="using:The_Untamed_Music_Player.Contracts.Models"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:helper="using:The_Untamed_Music_Player.Helpers"
      xmlns:local="using:The_Untamed_Music_Player.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:model="using:The_Untamed_Music_Player.Models"
      xmlns:toolkitConverters="using:CommunityToolkit.WinUI.Converters"
      xmlns:ui="using:CommunityToolkit.WinUI"
      Loaded="OnlineArtistDetailPage_Loaded"
      mc:Ignorable="d">

    <Page.Resources>
        <ThemeShadow x:Name="SharedShadow"/>
        <toolkitConverters:EmptyObjectToObjectConverter x:Key="InverseEmptyObjectToVisibilityConverter"
                                                        EmptyValue="Visible" NotEmptyValue="Collapsed"/>
        <DataTemplate x:Key="AlbumListViewTemplate" x:DataType="contract:IOnlineArtistAlbumInfo">
            <UserControl>
                <Grid x:Name="AlbumListItemGrid"
                      Margin="-15,0,-10,0"
                      Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition x:Name="AlbumListGridSecondRow"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="AlbumListGridFirstColumn" Width="160"/>
                        <ColumnDefinition x:Name="SeparateColumn"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup>
                            <VisualState x:Name="Narrow">
                                <VisualState.StateTriggers>
                                    <AdaptiveTrigger MinWindowWidth="0"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Target="AlbumListGridSecondRow.Height" Value="*"/>
                                    <Setter Target="AlbumListGridFirstColumn.Width" Value="72"/>
                                    <Setter Target="SeparateColumn.Width" Value="8"/>
                                    <Setter Target="AlbumListTextStackPanel.VerticalAlignment" Value="Center"/>
                                    <Setter Target="AlbumListTextStackPanel.Margin" Value="0"/>
                                    <Setter Target="AlbumListTextStackPanel.(Grid.Row)" Value="0"/>
                                    <Setter Target="AlbumListTextStackPanel.(Grid.Column)" Value="2"/>
                                    <Setter Target="SongListView.(Grid.Column)" Value="0"/>
                                    <Setter Target="SongListView.(Grid.Row)" Value="1"/>
                                    <Setter Target="SongListView.(Grid.ColumnSpan)" Value="3"/>
                                    <Setter Target="SongListView.(Grid.RowSpan)" Value="1"/>
                                    <Setter Target="SongListView.Margin" Value="0,7,0,3"/>
                                    <Setter Target="AlbumCoverBorder.Width" Value="70"/>
                                    <Setter Target="AlbumCoverBorder.Height" Value="70"/>
                                    <Setter Target="AlbumCover.Width" Value="72"/>
                                    <Setter Target="AlbumCover.Height" Value="72"/>
                                    <Setter Target="NoAlbumCover.Width" Value="72"/>
                                    <Setter Target="NoAlbumCover.Height" Value="72"/>
                                    <Setter Target="NoAlbumCoverIcon.FontSize" Value="24"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Normal">
                                <VisualState.StateTriggers>
                                    <AdaptiveTrigger MinWindowWidth="641"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Target="AlbumListGridSecondRow.Height" Value="60"/>
                                    <Setter Target="AlbumListGridFirstColumn.Width" Value="160"/>
                                    <Setter Target="SeparateColumn.Width" Value="15"/>
                                    <Setter Target="AlbumListTextStackPanel.VerticalAlignment" Value="Top"/>
                                    <Setter Target="AlbumListTextStackPanel.Margin" Value="8,0,8,0"/>
                                    <Setter Target="AlbumListTextStackPanel.(Grid.Row)" Value="1"/>
                                    <Setter Target="AlbumListTextStackPanel.(Grid.RowSpan)" Value="2"/>
                                    <Setter Target="AlbumListTextStackPanel.(Grid.Column)" Value="0"/>
                                    <Setter Target="SongListView.(Grid.Column)" Value="2"/>
                                    <Setter Target="SongListView.(Grid.Row)" Value="0"/>
                                    <Setter Target="SongListView.(Grid.ColumnSpan)" Value="1"/>
                                    <Setter Target="SongListView.(Grid.RowSpan)" Value="2"/>
                                    <Setter Target="AlbumCoverBorder.Width" Value="158"/>
                                    <Setter Target="AlbumCoverBorder.Height" Value="158"/>
                                    <Setter Target="AlbumCover.Width" Value="160"/>
                                    <Setter Target="AlbumCover.Height" Value="160"/>
                                    <Setter Target="NoAlbumCover.Width" Value="160"/>
                                    <Setter Target="NoAlbumCover.Height" Value="160"/>
                                    <Setter Target="NoAlbumCoverIcon.FontSize" Value="50"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                    <Border x:Name="AlbumCoverBorder"
                            Grid.Row="0" Grid.Column="0"
                            Padding="0" VerticalAlignment="Top"
                            CornerRadius="5">
                        <Grid>
                            <Image x:Name="AlbumCover"
                                   Canvas.ZIndex="1"
                                   Source="{x:Bind Cover}"
                                   Stretch="UniformToFill"/>
                            <Grid x:Name="NoAlbumCover"
                                  Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
                                  Canvas.ZIndex="0">
                                <FontIcon x:Name="NoAlbumCoverIcon"
                                          Canvas.ZIndex="0"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          Glyph="&#xE93C;"/>
                            </Grid>
                        </Grid>
                    </Border>
                    <StackPanel x:Name="AlbumListTextStackPanel" Margin="8,0,8,0">
                        <TextBlock MaxHeight="40"
                                   FontWeight="SemiBold"
                                   Text="{x:Bind Name}"
                                   TextTrimming="WordEllipsis"
                                   TextWrapping="WrapWholeWords"/>
                        <TextBlock FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Text="{x:Bind YearStr}"/>
                    </StackPanel>
                    <ListView x:Name="SongListView"
                              helper:CurrentSongHighlightExtensions.NotPlayingBrush="{ThemeResource TextFillColorPrimaryBrush}"
                              helper:CurrentSongHighlightExtensions.PlayingBrush="{ThemeResource AccentTextFillColorTertiaryBrush}"
                              helper:ListViewExtensions.ItemCornerRadius="8"
                              helper:ListViewExtensions.ItemMargin="0,3,0,3"
                              ui:ListViewExtensions.AlternateColor="{ThemeResource AlternateBackgroundBrush}"
                              IsItemClickEnabled="True"
                              ItemClick="SongListView_ItemClick"
                              ItemTemplate="{StaticResource SongListViewTemplate}"
                              ItemsSource="{x:Bind SongList}"
                              SelectionMode="None"/>
                </Grid>
            </UserControl>
        </DataTemplate>
        <DataTemplate x:Key="SongListViewTemplate" x:DataType="contract:IBriefSongInfoBase">
            <Grid Height="52"
                  Background="Transparent"
                  PointerEntered="Grid_PointerEntered"
                  PointerExited="Grid_PointerExited">
                <Grid.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Uid="Songs_Play"
                                        Width="216"
                                        Click="SongListViewPlayButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE768;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem x:Uid="Songs_PlayNext" Click="SongListViewPlayNextButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xECC8;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem x:Uid="OnlineSongs_Download" Click="SongListViewDownloadButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE896;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutSubItem x:Uid="Songs_AddTo">
                            <MenuFlyoutSubItem.Icon>
                                <FontIcon Glyph="&#xE710;"/>
                            </MenuFlyoutSubItem.Icon>
                            <MenuFlyoutItem x:Uid="Songs_AddTo_PlayQueue" Width="216">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE90B;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Uid="Songs_AddTo_NewPlaylist">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE710;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyoutSubItem>
                        <MenuFlyoutItem x:Uid="Songs_Properties" Click="SongListViewPropertiesButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE946;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem x:Uid="Songs_ShowAlbum" Click="SongListViewShowAlbumButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE93C;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem x:Uid="Songs_Select" Click="SongListViewSelectButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE762;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </Grid.ContextFlyout>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="ItemCheckBox"
                          Grid.Column="0"
                          IsThreeState="False" Visibility="Collapsed"/>
                <Button x:Name="PlayButton" x:Uid="Songs_PlayButton"
                        Grid.Column="1"
                        Click="SongListViewPlayButton_Click"
                        Style="{StaticResource SmallPlayButtonStyle}"
                        Visibility="Collapsed">
                    <FontIcon FontSize="16"
                              Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
                              Glyph="&#xE768;"/>
                </Button>
                <TextBlock x:Name="TitleText"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Text="{x:Bind Title}"
                           TextTrimming="CharacterEllipsis"
                           ToolTipService.ToolTip="{x:Bind Title}"/>
                <Button Grid.Column="3"
                        Background="Transparent" BorderBrush="Transparent">
                    <TextBlock x:Name="ArtistText"
                               FontSize="12"
                               Text="{x:Bind ArtistsStr}"
                               TextTrimming="CharacterEllipsis"
                               ToolTipService.ToolTip="{x:Bind ArtistsStr}"/>
                </Button>
                <TextBlock x:Name="YearText"
                           Grid.Column="4"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Text="{x:Bind YearStr}"
                           TextTrimming="CharacterEllipsis"
                           ToolTipService.ToolTip="{x:Bind YearStr}"/>
                <TextBlock x:Name="GenreText"
                           Grid.Column="5"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Text="{x:Bind GenreStr}"
                           TextTrimming="CharacterEllipsis"
                           ToolTipService.ToolTip="{x:Bind GenreStr}"/>
                <TextBlock x:Name="DurationText"
                           Grid.Column="6"
                           Margin="0,0,10,0" HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Text="{x:Bind DurationStr}"
                           TextTrimming="CharacterEllipsis"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="AlbumGridViewTemplate" x:DataType="contract:IOnlineArtistAlbumInfo">
            <Grid Width="170" Height="226"
                  Background="Transparent"
                  PointerEntered="Grid_PointerEntered"
                  PointerExited="Grid_PointerExited">
                <Grid.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Uid="Songs_Play"
                                        Width="216"
                                        Click="AlbumGridViewPlayButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE768;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem x:Uid="Songs_PlayNext" Click="AlbumGridViewPlayNextButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xECC8;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutSubItem x:Uid="Songs_AddTo">
                            <MenuFlyoutSubItem.Icon>
                                <FontIcon Glyph="&#xE710;"/>
                            </MenuFlyoutSubItem.Icon>
                            <MenuFlyoutItem x:Uid="Songs_AddTo_PlayQueue" Width="216">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE90B;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Uid="Songs_AddTo_NewPlaylist">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE710;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyoutSubItem>
                        <MenuFlyoutItem x:Uid="Songs_ShowAlbum" Click="AlbumGridViewShowAlbumButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE93C;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem x:Uid="Songs_Select" Click="AlbumGridViewSelectButton_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE762;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </Grid.ContextFlyout>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Canvas.ZIndex="2">
                    <CheckBox x:Name="ItemCheckBox"
                              Margin="18,12,0,0" HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Visibility="Collapsed"/>
                    <Button x:Name="PlayButton"
                            Width="32" Height="32"
                            Margin="12,0,0,8" HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Click="AlbumGridViewPlayButton_Click"
                            Style="{StaticResource CircularButtonStyle}"
                            Visibility="Collapsed">
                        <FontIcon FontSize="12" Glyph="&#xE768;"/>
                    </Button>
                    <Button x:Name="MenuButton"
                            Width="32" Height="32"
                            Margin="0,0,12,8" HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource CircularButtonStyle}"
                            Visibility="Collapsed">
                        <FontIcon FontSize="12" Glyph="&#xE712;"/>
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:Uid="Songs_Play"
                                                Width="216"
                                                Click="AlbumGridViewPlayButton_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE768;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem x:Uid="Songs_PlayNext" Click="AlbumGridViewPlayNextButton_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xECC8;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutSubItem x:Uid="Songs_AddTo">
                                    <MenuFlyoutSubItem.Icon>
                                        <FontIcon Glyph="&#xE710;"/>
                                    </MenuFlyoutSubItem.Icon>
                                    <MenuFlyoutItem x:Uid="Songs_AddTo_PlayQueue" Width="216">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE90B;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem x:Uid="Songs_AddTo_NewPlaylist">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE710;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutItem x:Uid="Songs_ShowAlbum" Click="AlbumGridViewShowAlbumButton_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE93C;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem x:Uid="Songs_Select" Click="AlbumGridViewSelectButton_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE762;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </Grid>
                <Border x:Name="CoverBorder"
                        Grid.Row="0"
                        Width="158" Height="158"
                        Margin="0,6,0,2" Padding="0"
                        CornerRadius="5">
                    <Grid>
                        <Image x:Name="ControllerCover"
                               Width="160" Height="160"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Canvas.ZIndex="1"
                               Source="{x:Bind Cover}"
                               Stretch="UniformToFill"/>
                        <Grid Width="160" Height="160"
                              Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
                              Canvas.ZIndex="0">
                            <FontIcon Canvas.ZIndex="0" FontSize="50"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      Glyph="&#xE93C;"/>
                        </Grid>
                    </Grid>
                </Border>
                <TextBlock Grid.Row="1"
                           Margin="9,0,9,0"
                           FontWeight="SemiBold"
                           Text="{x:Bind Name}"
                           TextTrimming="CharacterEllipsis"/>
                <TextBlock Grid.Row="2"
                           Margin="9,0,9,0"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Text="{x:Bind YearStr}"
                           TextTrimming="CharacterEllipsis"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Header.Margin" Value="16,54,16,-80"/>
                        <Setter Target="ButtonStackPanel.Margin" Value="0,4,0,0"/>
                        <Setter Target="CoverArt.Width" Value="136"/>
                        <Setter Target="CoverArt.Height" Value="136"/>
                        <Setter Target="TitleText.FontSize" Value="28"/>
                        <Setter Target="SubtitleText.FontSize" Value="14"/>
                        <Setter Target="SubtitleText.Margin" Value="0,1,0,0"/>
                        <Setter Target="CaptionText.Margin" Value="0,1,0,0"/>
                        <Setter Target="IntroductionText.Margin" Value="0,0,0,0"/>
                        <Setter Target="AddToButton.Visibility" Value="Collapsed"/>
                        <Setter Target="MoreButton.Visibility" Value="Visible"/>
                        <Setter Target="AddToFlyout.Visibility" Value="Visible"/>
                        <Setter Target="SelectorBarPanel.Margin" Value="0,27,0,0"/>
                        <Setter Target="SharedScrollViewer.(ui:ScrollViewerExtensions.VerticalScrollBarMargin)" Value="0,-178,0,0"/>
                        <Setter Target="AlbumListView.Padding" Value="12,0,12,0"/>
                        <Setter Target="AlbumView.Margin" Value="0,35,0,0"/>
                        <Setter Target="AlbumListHeaderPadding.Height" Value="55"/>
                        <Setter Target="AlbumGridView.Padding" Value="12,0,12,0"/>
                        <Setter Target="AlbumGridHeaderPadding.Height" Value="55"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Medium">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="641"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Header.Margin" Value="56,54,56,-80"/>
                        <Setter Target="ButtonStackPanel.Margin" Value="0,12,0,0"/>
                        <Setter Target="CoverArt.Width" Value="162"/>
                        <Setter Target="CoverArt.Height" Value="162"/>
                        <Setter Target="TitleText.FontSize" Value="28"/>
                        <Setter Target="SubtitleText.FontSize" Value="20"/>
                        <Setter Target="SubtitleText.Margin" Value="0,5,0,0"/>
                        <Setter Target="CaptionText.Margin" Value="0,5,0,0"/>
                        <Setter Target="IntroductionText.Margin" Value="0,3,0,0"/>
                        <Setter Target="AddToButton.Visibility" Value="Visible"/>
                        <Setter Target="MoreButton.Visibility" Value="Collapsed"/>
                        <Setter Target="AddToFlyout.Visibility" Value="Collapsed"/>
                        <Setter Target="SelectorBarPanel.Margin" Value="0,27,0,0"/>
                        <Setter Target="SharedScrollViewer.(ui:ScrollViewerExtensions.VerticalScrollBarMargin)" Value="0,-195,0,0"/>
                        <Setter Target="AlbumListView.Padding" Value="52,0,52,0"/>
                        <Setter Target="AlbumView.Margin" Value="0,25,0,0"/>
                        <Setter Target="AlbumListHeaderPadding.Height" Value="55"/>
                        <Setter Target="AlbumGridView.Padding" Value="52,0,52,0"/>
                        <Setter Target="AlbumGridHeaderPadding.Height" Value="55"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Large">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="850"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Header.Margin" Value="56,54,56,-80"/>
                        <Setter Target="ButtonStackPanel.Margin" Value="0,25,0,0"/>
                        <Setter Target="CoverArt.Width" Value="208"/>
                        <Setter Target="CoverArt.Height" Value="208"/>
                        <Setter Target="TitleText.FontSize" Value="40"/>
                        <Setter Target="SubtitleText.FontSize" Value="20"/>
                        <Setter Target="SubtitleText.Margin" Value="0,8,0,0"/>
                        <Setter Target="CaptionText.Margin" Value="0,12,0,0"/>
                        <Setter Target="IntroductionText.Margin" Value="0,8,0,0"/>
                        <Setter Target="AddToButton.Visibility" Value="Visible"/>
                        <Setter Target="MoreButton.Visibility" Value="Collapsed"/>
                        <Setter Target="SelectorBarPanel.Margin" Value="0,3,0,0"/>
                        <Setter Target="SharedScrollViewer.(ui:ScrollViewerExtensions.VerticalScrollBarMargin)" Value="0,-200,0,0"/>
                        <Setter Target="AlbumListView.Padding" Value="52,0,52,0"/>
                        <Setter Target="AlbumView.Margin" Value="0,7,0,0"/>
                        <Setter Target="AlbumListHeaderPadding.Height" Value="93"/>
                        <Setter Target="AlbumGridView.Padding" Value="52,0,52,0"/>
                        <Setter Target="AlbumGridHeaderPadding.Height" Value="93"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid x:Name="BackgroundHost"
              Margin="0,-136,0,0"
              FlowDirection="LeftToRight"
              SizeChanged="BackgroundHost_OnSizeChanged"/>
        <Grid x:Name="Header"
              Margin="0,0,0,-80"
              Canvas.ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Rectangle x:Name="BackgroundAcrylic"
                       Grid.Row="0"
                       Fill="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                       RadiusX="8" RadiusY="12"
                       Stroke="{ThemeResource ControlElevationBorderBrush}"
                       StrokeThickness="1"/>

            <Grid x:Name="ContentContainer" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="CoverArt"
                        Grid.Column="0"
                        Margin="0,0,20,0"
                        BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                        BorderThickness="0" CornerRadius="100"
                        FlowDirection="LeftToRight"
                        SizeChanged="CoverArt_OnSizeChanged"
                        Translation="0,0,16">
                    <Border.Background>
                        <ImageBrush ImageSource="{x:Bind ViewModel.BriefArtist.Cover}" Stretch="UniformToFill"/>
                    </Border.Background>
                    <Border Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
                            CornerRadius="100"
                            Visibility="{x:Bind ViewModel.BriefArtist.Cover, Converter={StaticResource InverseEmptyObjectToVisibilityConverter}}">
                        <FontIcon x:Name="CoverArtIcon"
                                  FontSize="64"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Glyph="&#xE77B;"/>
                    </Border>
                </Border>

                <StackPanel x:Name="TextPanel"
                            Grid.Column="1"
                            Orientation="Vertical">
                    <TextBlock x:Name="TitleText"
                               Text="{x:Bind ViewModel.BriefArtist.Name}"
                               TextTrimming="WordEllipsis" TextWrapping="NoWrap"
                               ToolTipService.ToolTip="{x:Bind ViewModel.BriefArtist.Name}"/>
                    <TextBlock x:Name="SubtitleText"
                               FontWeight="Normal"
                               Text="{x:Bind ViewModel.Artist.CountStr, Mode=OneWay}"
                               TextTrimming="WordEllipsis" TextWrapping="NoWrap"/>
                    <TextBlock x:Name="CaptionText"
                               FontSize="14"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Text="{x:Bind ViewModel.Artist.DescriptionStr, Mode=OneWay}"
                               TextTrimming="WordEllipsis" TextWrapping="NoWrap"/>
                    <TextBlock x:Name="IntroductionText"
                               FontSize="14"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               MaxLines="1"
                               Text="{x:Bind ViewModel.Artist.Introduction, Mode=OneWay}"
                               TextTrimming="WordEllipsis" TextWrapping="NoWrap"
                               ToolTipService.ToolTip="{x:Bind ViewModel.Artist.Introduction, Mode=OneWay}"/>

                    <Grid x:Name="ButtonPanel">
                        <StackPanel x:Name="ButtonStackPanel"
                                    Padding="0" HorizontalAlignment="Left"
                                    Orientation="Horizontal" Spacing="16">
                            <Button x:Name="PlayButton"
                                    Padding="11,9,11,9" HorizontalAlignment="Stretch"
                                    Click="{x:Bind ViewModel.PlayAllButton_Click}"
                                    Style="{StaticResource AccentButtonStyle}"
                                    XYFocusDown="{x:Bind AlbumListView}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontSize="16" Glyph="&#xE768;"/>
                                    <TextBlock x:Uid="AlbumDetail_PlayAll" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            <Button Padding="11,9,11,9" HorizontalAlignment="Stretch"
                                    Click="{x:Bind ViewModel.ShuffledPlayAllButton_Click}"
                                    XYFocusDown="{x:Bind AlbumListView}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontSize="16" Glyph="&#xE8B1;"/>
                                    <TextBlock x:Uid="AlbumDetail_ShuffleAndPlay" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="AddToButton"
                                    Padding="11,9,11,9" HorizontalAlignment="Stretch"
                                    XYFocusDown="{x:Bind AlbumListView}">
                                <Button.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem x:Uid="Songs_AddTo_PlayQueue" Width="216">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE90B;"/>
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutSeparator/>
                                        <MenuFlyoutItem x:Uid="Songs_AddTo_NewPlaylist">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE710;"/>
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Button.Flyout>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontSize="16" Glyph="&#xE710;"/>
                                    <TextBlock x:Uid="Songs_AddTo" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="MoreButton"
                                    Padding="11,9,11,9" HorizontalAlignment="Stretch">
                                <Button.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutSubItem x:Name="AddToFlyout" x:Uid="Songs_AddTo"
                                                           Width="158">
                                            <MenuFlyoutSubItem.Icon>
                                                <FontIcon Glyph="&#xE710;"/>
                                            </MenuFlyoutSubItem.Icon>
                                            <MenuFlyoutItem x:Uid="Songs_AddTo_PlayQueue" Width="216">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE90B;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutSeparator/>
                                            <MenuFlyoutItem x:Uid="Songs_AddTo_NewPlaylist">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE710;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyoutSubItem>
                                    </MenuFlyout>
                                </Button.Flyout>
                                <FontIcon FontSize="16" Glyph="&#xE712;"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
            <Grid x:Name="SelectorBarPanel" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Uid="ArtistDetail_InYourLibrary"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           FontSize="20"/>
                <SelectorBar Grid.Column="2"
                             VerticalAlignment="Center"
                             KeyTipPlacementMode="Top"
                             Loaded="SelectorBar_Loaded"
                             SelectionChanged="SelectorBar_SelectionChanged">
                    <SelectorBarItem AccessKey="CL">
                        <SelectorBarItem.Icon>
                            <FontIcon Glyph="&#xEA37;"/>
                        </SelectorBarItem.Icon>
                    </SelectorBarItem>
                    <SelectorBarItem AccessKey="CG">
                        <SelectorBarItem.Icon>
                            <FontIcon Glyph="&#xF0E2;"/>
                        </SelectorBarItem.Icon>
                    </SelectorBarItem>
                </SelectorBar>
            </Grid>
        </Grid>
        <ProgressRing Grid.Row="1"
                      Width="50" Height="50"
                      Margin="0,60,0,0"
                      Canvas.ZIndex="1"
                      IsActive="{x:Bind ViewModel.IsSearchProgressRingActive, Mode=OneWay}"/>
        <Grid x:Name="AlbumView" Grid.Row="1">
            <ScrollViewer x:Name="SharedScrollViewer">
                <Grid>
                    <ListView x:Name="AlbumListView"
                              ui:ListViewExtensions.ItemContainerStretchDirection="Horizontal"
                              IsItemClickEnabled="False"
                              ItemTemplate="{StaticResource AlbumListViewTemplate}"
                              ItemsSource="{x:Bind ViewModel.Artist.AlbumList, Mode=OneWay}"
                              Opacity="{x:Bind ViewModel.ListViewOpacity, Mode=OneWay}"
                              SelectionMode="None"
                              XYFocusUp="{x:Bind PlayButton}">
                        <ListView.Header>
                            <Border x:Name="AlbumListHeaderPadding"/>
                        </ListView.Header>
                        <ListView.Footer>
                            <ProgressRing Width="25" Height="25"
                                          Margin="0,5,0,5"
                                          Visibility="{x:Bind ViewModel.IsSearchMoreProgressRingActive, Mode=OneWay}"/>
                        </ListView.Footer>
                    </ListView>
                    <GridView x:Name="AlbumGridView"
                              helper:ListViewExtensions.ItemCornerRadius="8"
                              IsItemClickEnabled="True"
                              ItemClick="AlbumGridView_ItemClick"
                              ItemTemplate="{StaticResource AlbumGridViewTemplate}"
                              ItemsSource="{x:Bind ViewModel.Artist.AlbumList, Mode=OneWay}"
                              Opacity="{x:Bind ViewModel.ListViewOpacity, Mode=OneWay}"
                              SelectionMode="None">
                        <GridView.Header>
                            <Border x:Name="AlbumGridHeaderPadding"/>
                        </GridView.Header>
                        <GridView.Footer>
                            <ProgressRing Width="25" Height="25"
                                          Margin="0,5,0,5"
                                          Visibility="{x:Bind ViewModel.IsSearchMoreProgressRingActive, Mode=OneWay}"/>
                        </GridView.Footer>
                    </GridView>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
