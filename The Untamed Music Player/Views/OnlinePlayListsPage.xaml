<Page x:Class="The_Untamed_Music_Player.Views.OnlinePlayListsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:contract="using:The_Untamed_Music_Player.Contracts.Models"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:helper="using:The_Untamed_Music_Player.Helpers"
      xmlns:local="using:The_Untamed_Music_Player.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:model="using:The_Untamed_Music_Player.Models"
      xmlns:ui="using:CommunityToolkit.WinUI"
      Loaded="OnlinePlaylistsPage_Loaded"
      mc:Ignorable="d">


    <Page.Resources>
        <DataTemplate x:Key="PlaylistGridViewTemplate" x:DataType="contract:IBriefOnlinePlaylistInfo">
            <Grid Width="170" Height="226"
                  Background="Transparent"
                  PointerEntered="Grid_PointerEntered"
                  PointerExited="Grid_PointerExited">
                <Grid.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Uid="Songs_Play"
                                        Width="216"
                                        Click="PlayButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xE768;}"/>
                        <MenuFlyoutItem x:Uid="Songs_PlayNext"
                                        Click="PlayNextButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xF5EB;}"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutSubItem x:Uid="Songs_AddTo" Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily}, Glyph=&#xE710;}">
                            <MenuFlyoutItem x:Uid="Songs_AddTo_PlayQueue"
                                            Width="216"
                                            Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                               Glyph=&#xE93F;}"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Uid="Songs_AddTo_NewPlaylist" Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily}, Glyph=&#xE710;}"/>
                        </MenuFlyoutSubItem>
                        <MenuFlyoutItem x:Uid="OnlinePlayLists_ShowPlaylist"
                                        Click="ShowPlaylistButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xE728;}"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem x:Uid="Songs_Select"
                                        Click="SelectButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xEA20;}"/>
                    </MenuFlyout>
                </Grid.ContextFlyout>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Canvas.ZIndex="2">
                    <CheckBox x:Name="ItemCheckBox"
                              Margin="18,12,0,0" HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Visibility="Collapsed"/>
                    <Button x:Name="PlayButton"
                            Width="32" Height="32"
                            Margin="12,0,0,8" HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Click="PlayButton_Click"
                            Style="{StaticResource CircularButtonStyle}"
                            Visibility="Collapsed">
                        <FontIcon FontFamily="{StaticResource UntamedFontFamily}"
                                  FontSize="12" Glyph="&#xE768;"/>
                    </Button>
                    <Button x:Name="MenuButton"
                            Width="32" Height="32"
                            Margin="0,0,12,8" HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource CircularButtonStyle}"
                            Visibility="Collapsed">
                        <FontIcon FontFamily="{StaticResource UntamedFontFamily}"
                                  FontSize="12" Glyph="&#xE712;"/>
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:Uid="Songs_Play"
                                                Width="216"
                                                Click="PlayButton_Click"
                                                Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                                   Glyph=&#xE768;}"/>
                                <MenuFlyoutItem x:Uid="Songs_PlayNext"
                                                Click="PlayNextButton_Click"
                                                Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                                   Glyph=&#xF5EB;}"/>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutSubItem x:Uid="Songs_AddTo" Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily}, Glyph=&#xE710;}">
                                    <MenuFlyoutItem x:Uid="Songs_AddTo_PlayQueue"
                                                    Width="216"
                                                    Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                                       Glyph=&#xE93F;}"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem x:Uid="Songs_AddTo_NewPlaylist" Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily}, Glyph=&#xE710;}"/>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutItem x:Uid="OnlinePlayLists_ShowPlaylist"
                                                Click="ShowPlaylistButton_Click"
                                                Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                                   Glyph=&#xE728;}"/>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem x:Uid="Songs_Select"
                                                Click="SelectButton_Click"
                                                Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                                   Glyph=&#xEA20;}"/>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </Grid>
                <Border x:Name="CoverBorder"
                        Grid.Row="0"
                        Width="158" Height="158"
                        Margin="0,6,0,2" Padding="0"
                        CornerRadius="5">
                    <Grid>
                        <Image x:Name="ControllerCover"
                               Width="160" Height="160"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Canvas.ZIndex="1"
                               Source="{x:Bind Cover}"
                               Stretch="UniformToFill"/>
                        <Grid Width="160" Height="160"
                              Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
                              Canvas.ZIndex="0">
                            <FontIcon Canvas.ZIndex="0"
                                      FontFamily="{StaticResource UntamedFontFamily}"
                                      FontSize="50"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      Glyph="&#xE728;"/>
                        </Grid>
                    </Grid>
                </Border>
                <TextBlock Grid.Row="1"
                           Margin="9,0,9,0"
                           FontWeight="SemiBold"
                           Text="{x:Bind Name}"
                           TextTrimming="CharacterEllipsis"/>
                <TextBlock Grid.Row="2"
                           Margin="9,0,9,0"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Text="{x:Bind TotalSongNumStr}"
                           TextTrimming="CharacterEllipsis"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="PlaylistGridView.Padding" Value="12,0,12,0"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Normal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="641"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="PlaylistGridView.Padding" Value="52,0,52,0"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <GridView x:Name="PlaylistGridView"
                  helper:ListViewExtensions.ItemCornerRadius="8"
                  IsItemClickEnabled="True"
                  ItemClick="PlaylistGridView_ItemClick"
                  ItemTemplate="{StaticResource PlaylistGridViewTemplate}"
                  ItemsSource="{x:Bind model:Data.OnlineMusicLibrary.OnlinePlaylistInfoList, Mode=OneWay}"
                  Loaded="PlaylistGridView_Loaded"
                  Opacity="{x:Bind model:Data.OnlineMusicLibrary.ListViewOpacity, Mode=OneWay}"
                  SelectionMode="None">
            <GridView.Footer>
                <ProgressRing Width="25" Height="25"
                              Margin="0,5,0,5"
                              Visibility="{x:Bind model:Data.OnlineMusicLibrary.IsSearchMoreProgressRingActive, Mode=OneWay}"/>
            </GridView.Footer>
        </GridView>
    </Grid>
</Page>
