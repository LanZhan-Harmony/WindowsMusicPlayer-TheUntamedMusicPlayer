<Page x:Class="The_Untamed_Music_Player.Views.PlayListDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:helper="using:The_Untamed_Music_Player.Helpers"
      xmlns:local="using:The_Untamed_Music_Player.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:model="using:The_Untamed_Music_Player.Models"
      xmlns:toolkitConverters="using:CommunityToolkit.WinUI.Converters"
      xmlns:ui="using:CommunityToolkit.WinUI"
      Loaded="PlayListDetailPage_Loaded"
      mc:Ignorable="d">


    <Page.Resources>
        <ThemeShadow x:Name="SharedShadow"/>
        <toolkitConverters:EmptyObjectToObjectConverter x:Key="InverseEmptyObjectToVisibilityConverter"
                                                        EmptyValue="Visible" NotEmptyValue="Collapsed"/>
        <DataTemplate x:Key="SongListViewTemplate" x:DataType="model:IndexedPlaylistSong">
            <Grid Height="52"
                  Background="Transparent"
                  PointerEntered="Grid_PointerEntered"
                  PointerExited="Grid_PointerExited">
                <Grid.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Uid="Songs_Play"
                                        Width="216"
                                        Click="PlayButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xE768;}"/>
                        <MenuFlyoutItem x:Uid="Songs_PlayNext"
                                        Click="PlayNextButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xF5EB;}"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutSubItem x:Uid="Songs_AddTo" Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily}, Glyph=&#xE710;}">
                            <MenuFlyoutItem x:Uid="Songs_AddTo_PlayQueue"
                                            Width="216"
                                            Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                               Glyph=&#xE93F;}"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Uid="Songs_AddTo_NewPlaylist" Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily}, Glyph=&#xE710;}"/>
                        </MenuFlyoutSubItem>
                        <MenuFlyoutItem x:Uid="PlayQueue_Remove"
                                        Click="RemoveButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xE711;}"/>
                        <MenuFlyoutItem x:Uid="PlayQueue_MoveUp"
                                        Click="MoveUpButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xE74A;}"/>
                        <MenuFlyoutItem x:Uid="PlayQueue_MoveDown"
                                        Click="MoveDownButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xE74B;}"/>
                        <MenuFlyoutItem x:Uid="Songs_ShowAlbum"
                                        Click="ShowAlbumButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xE93C;}"/>
                        <MenuFlyoutItem x:Uid="Songs_ShowArtist"
                                        Click="ShowArtistButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xE77B;}"/>
                        <MenuFlyoutItem x:Uid="Songs_Properties"
                                        Click="PropertiesButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xE946;}"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem x:Uid="Songs_Select"
                                        Click="SelectButton_Click"
                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                           Glyph=&#xEA20;}"/>
                    </MenuFlyout>
                </Grid.ContextFlyout>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="2.2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="ItemCheckBox"
                          Grid.Column="0"
                          IsThreeState="False" Visibility="Collapsed"/>
                <Button x:Name="PlayButton" x:Uid="Songs_PlayButton"
                        Grid.Column="1"
                        Click="PlayButton_Click"
                        Style="{StaticResource SmallPlayButtonStyle}"
                        Visibility="Collapsed">
                    <FontIcon FontFamily="{StaticResource UntamedFontFamily}"
                              FontSize="16"
                              Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
                              Glyph="&#xE768;"/>
                </Button>
                <TextBlock x:Name="TitleText"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Text="{x:Bind Song.Title}"
                           TextTrimming="CharacterEllipsis"
                           ToolTipService.ToolTip="{x:Bind Song.Title}"/>
                <Button Grid.Column="3"
                        Background="Transparent" BorderBrush="Transparent"
                        Click="ShowArtistButton_Click">
                    <TextBlock x:Name="ArtistText"
                               FontSize="12"
                               Text="{x:Bind Song.ArtistsStr}"
                               TextTrimming="CharacterEllipsis"
                               ToolTipService.ToolTip="{x:Bind Song.ArtistsStr}"/>
                </Button>
                <Button Grid.Column="4"
                        Background="Transparent" BorderBrush="Transparent"
                        Click="ShowAlbumButton_Click">
                    <TextBlock x:Name="AlbumText"
                               FontSize="12"
                               Text="{x:Bind Song.Album}"
                               TextTrimming="CharacterEllipsis"
                               ToolTipService.ToolTip="{x:Bind Song.Album}"/>
                </Button>
                <TextBlock x:Name="YearText"
                           Grid.Column="5"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Text="{x:Bind Song.YearStr}"
                           TextTrimming="CharacterEllipsis"
                           ToolTipService.ToolTip="{x:Bind Song.YearStr}"/>
                <TextBlock x:Name="DurationText"
                           Grid.Column="6"
                           Margin="0,0,10,0" HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Text="{x:Bind Song.DurationStr}"
                           TextTrimming="CharacterEllipsis"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Header.Margin" Value="16,54,16,-80"/>
                        <Setter Target="ButtonStackPanel.Margin" Value="0,14,0,0"/>
                        <Setter Target="CoverArt.Width" Value="136"/>
                        <Setter Target="CoverArt.Height" Value="136"/>
                        <Setter Target="TitleText.FontSize" Value="28"/>
                        <Setter Target="CaptionText.Margin" Value="0,8,0,0"/>
                        <Setter Target="RenameButton.Visibility" Value="Collapsed"/>
                        <Setter Target="DeleteButton.Visibility" Value="Collapsed"/>
                        <Setter Target="MoreButton.Visibility" Value="Visible"/>
                        <Setter Target="RenameInfoFlyout.Visibility" Value="Visible"/>
                        <Setter Target="DeleteInfoFlyout.Visibility" Value="Visible"/>
                        <Setter Target="SongListView.Padding" Value="12,0,12,0"/>
                        <Setter Target="SongListView.Margin" Value="0,68,0,0"/>
                        <Setter Target="ListHeaderPadding.Height" Value="81"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Medium">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="641"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Header.Margin" Value="56,54,56,-80"/>
                        <Setter Target="ButtonStackPanel.Margin" Value="0,25,0,0"/>
                        <Setter Target="CoverArt.Width" Value="162"/>
                        <Setter Target="CoverArt.Height" Value="162"/>
                        <Setter Target="TitleText.FontSize" Value="28"/>
                        <Setter Target="CaptionText.Margin" Value="0,8,0,0"/>
                        <Setter Target="RenameButton.Visibility" Value="Visible"/>
                        <Setter Target="DeleteButton.Visibility" Value="Collapsed"/>
                        <Setter Target="MoreButton.Visibility" Value="Visible"/>
                        <Setter Target="RenameInfoFlyout.Visibility" Value="Collapsed"/>
                        <Setter Target="DeleteInfoFlyout.Visibility" Value="Visible"/>
                        <Setter Target="SongListView.Padding" Value="52,0,52,0"/>
                        <Setter Target="SongListView.Margin" Value="0,46,0,0"/>
                        <Setter Target="ListHeaderPadding.Height" Value="103"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Large">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="850"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Header.Margin" Value="56,54,56,-80"/>
                        <Setter Target="ButtonStackPanel.Margin" Value="0,25,0,0"/>
                        <Setter Target="CoverArt.Width" Value="208"/>
                        <Setter Target="CoverArt.Height" Value="208"/>
                        <Setter Target="TitleText.FontSize" Value="40"/>
                        <Setter Target="CaptionText.Margin" Value="0,8,0,0"/>
                        <Setter Target="RenameButton.Visibility" Value="Visible"/>
                        <Setter Target="DeleteButton.Visibility" Value="Visible"/>
                        <Setter Target="MoreButton.Visibility" Value="Collapsed"/>
                        <Setter Target="RenameInfoFlyout.Visibility" Value="Collapsed"/>
                        <Setter Target="DeleteInfoFlyout.Visibility" Value="Collapsed"/>
                        <Setter Target="SongListView.Padding" Value="52,0,52,0"/>
                        <Setter Target="SongListView.Margin" Value="0,15,0,0"/>
                        <Setter Target="ListHeaderPadding.Height" Value="135"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid x:Name="Header"
              Grid.Row="0"
              Margin="0,0,0,-80"
              Canvas.ZIndex="1">
            <Rectangle x:Name="BackgroundAcrylic"
                       Fill="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                       RadiusX="8" RadiusY="12"
                       Stroke="{ThemeResource ControlElevationBorderBrush}"
                       StrokeThickness="1"/>

            <Grid x:Name="ContentContainer">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="CoverArt"
                        Grid.Column="0"
                        Margin="0,0,20,0"
                        BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource OverlayCornerRadius}"
                        FlowDirection="LeftToRight"
                        Shadow="{StaticResource SharedShadow}"
                        SizeChanged="PlaylistArt_OnSizeChanged"
                        Translation="0,0,16">
                    <Grid>
                        <Image x:Name="ControllerCover"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               Canvas.ZIndex="1"
                               Source="{x:Bind ViewModel.Cover, Mode=OneWay}"
                               Stretch="UniformToFill"/>
                        <Grid Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}" Canvas.ZIndex="0">
                            <FontIcon Canvas.ZIndex="0"
                                      FontFamily="{StaticResource UntamedFontFamily}"
                                      FontSize="50"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      Glyph="&#xED3B;"
                                      Visibility="{x:Bind ViewModel.Cover, Mode=OneWay, Converter={StaticResource InverseEmptyObjectToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>
                </Border>

                <StackPanel x:Name="TextPanel"
                            Grid.Column="1"
                            Orientation="Vertical">
                    <TextBlock x:Name="TitleText"
                               Text="{x:Bind ViewModel.PlaylistName, Mode=OneWay}"
                               TextTrimming="WordEllipsis" TextWrapping="NoWrap"
                               ToolTipService.ToolTip="{x:Bind ViewModel.PlaylistName, Mode=OneWay}"/>
                    <TextBlock x:Name="CaptionText"
                               FontSize="14"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Text="{x:Bind ViewModel.TotalSongNumStr, Mode=OneWay}"
                               TextTrimming="WordEllipsis" TextWrapping="NoWrap"/>

                    <Grid x:Name="ButtonPanel">
                        <StackPanel x:Name="ButtonStackPanel"
                                    Padding="0" HorizontalAlignment="Left"
                                    Orientation="Horizontal" Spacing="16">
                            <Button x:Name="PlayAllButton"
                                    Padding="11,9,11,9" HorizontalAlignment="Stretch"
                                    Click="{x:Bind ViewModel.PlayAllButton_Click}"
                                    IsEnabled="{x:Bind ViewModel.IsPlayAllButtonEnabled, Mode=OneWay}"
                                    Style="{StaticResource AccentButtonStyle}"
                                    XYFocusDown="{x:Bind SongListView}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="{StaticResource UntamedFontFamily}"
                                              FontSize="16" Glyph="&#xE768;"/>
                                    <TextBlock x:Uid="AlbumDetail_PlayAll" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="AddToButton"
                                    Padding="11,9,11,9" HorizontalAlignment="Stretch"
                                    XYFocusDown="{x:Bind SongListView}">
                                <Button.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem x:Uid="Songs_AddTo_PlayQueue"
                                                        Width="216"
                                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                                           Glyph=&#xE93F;}"/>
                                        <MenuFlyoutSeparator/>
                                        <MenuFlyoutItem x:Uid="Songs_AddTo_NewPlaylist" Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily}, Glyph=&#xE710;}"/>
                                    </MenuFlyout>
                                </Button.Flyout>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="{StaticResource UntamedFontFamily}"
                                              FontSize="16" Glyph="&#xE710;"/>
                                    <TextBlock x:Uid="Songs_AddTo" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="RenameButton"
                                    Padding="11,9,11,9" HorizontalAlignment="Stretch"
                                    Click="RenameButton_Click"
                                    XYFocusDown="{x:Bind SongListView}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="{StaticResource UntamedFontFamily}"
                                              FontSize="16" Glyph="&#xE8AC;"/>
                                    <TextBlock x:Uid="PlayLists_Rename" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="DeleteButton"
                                    Padding="11,9,11,9" HorizontalAlignment="Stretch"
                                    Click="{x:Bind ViewModel.DeleteButton_Click}"
                                    XYFocusDown="{x:Bind SongListView}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="{StaticResource UntamedFontFamily}"
                                              FontSize="16" Glyph="&#xE74D;"/>
                                    <TextBlock x:Uid="PlayLists_Delete" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="MoreButton"
                                    Padding="11,9,11,9" HorizontalAlignment="Stretch">
                                <Button.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem x:Name="RenameInfoFlyout" x:Uid="PlayLists_Rename"
                                                        Width="158"
                                                        Click="RenameButton_Click"
                                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                                           Glyph=&#xE8AC;}"/>
                                        <MenuFlyoutItem x:Name="DeleteInfoFlyout" x:Uid="PlayLists_Delete"
                                                        Width="158"
                                                        Click="{x:Bind ViewModel.DeleteButton_Click}"
                                                        Icon="{ui:FontIcon FontFamily={StaticResource UntamedFontFamily},
                                                                           Glyph=&#xE74D;}"/>
                                    </MenuFlyout>
                                </Button.Flyout>
                                <FontIcon FontFamily="{StaticResource UntamedFontFamily}"
                                          FontSize="16" Glyph="&#xE712;"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
        <ListView x:Name="SongListView"
                  Grid.Row="1"
                  helper:CurrentSongHighlightExtensions.NotPlayingBrush="{ThemeResource TextFillColorPrimaryBrush}"
                  helper:CurrentSongHighlightExtensions.PlayingBrush="{ThemeResource AccentTextFillColorTertiaryBrush}"
                  helper:ListViewExtensions.ItemCornerRadius="8"
                  helper:ListViewExtensions.ItemMargin="0,3,0,3"
                  ui:ListViewExtensions.AlternateColor="{ThemeResource AlternateBackgroundBrush}"
                  ui:ListViewExtensions.ItemContainerStretchDirection="Horizontal"
                  ui:ScrollViewerExtensions.VerticalScrollBarMargin="0,-150,0,0"
                  IsItemClickEnabled="True"
                  ItemClick="{x:Bind ViewModel.SongListView_ItemClick}"
                  ItemTemplate="{StaticResource SongListViewTemplate}"
                  ItemsSource="{x:Bind ViewModel.Playlist.SongList, Mode=OneWay}"
                  SelectionMode="None"
                  XYFocusUp="{x:Bind PlayAllButton}">
            <ListView.Header>
                <Border x:Name="ListHeaderPadding"/>
            </ListView.Header>
        </ListView>
    </Grid>
</Page>
