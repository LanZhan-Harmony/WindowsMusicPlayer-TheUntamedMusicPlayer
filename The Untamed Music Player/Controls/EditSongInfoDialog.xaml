<ContentDialog x:Uid="EditSongInfoDialog"
               x:Class="The_Untamed_Music_Player.Controls.EditSongInfoDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:local="using:The_Untamed_Music_Player.Controls"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               DefaultButton="Primary"
               Style="{StaticResource DefaultContentDialogStyle}"
               mc:Ignorable="d">
    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMaxWidth">2000</x:Double>
    </ContentDialog.Resources>
    <ScrollViewer Margin="-24,0,-24,0">
        <StackPanel>
            <Grid Width="625">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="Column0" Width="*"/>
                    <ColumnDefinition x:Name="Column1" Width="17"/>
                    <ColumnDefinition x:Name="Column2" Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0"
                            Padding="24,0,0,0"
                            Spacing="10">
                    <TextBox>
                        <TextBox.Header>
                            <TextBlock><Run x:Uid="PropertiesDialog_Title"
                                     FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    标题
                                </Run><Run Foreground="{ThemeResource RequiredBrush}">*</Run></TextBlock>
                        </TextBox.Header>
                    </TextBox>
                    <TextBox>
                        <TextBox.Header>
                            <TextBlock><Run x:Uid="PropertiesDialog_ContributingArtists"
                                     FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/><Run Foreground="{ThemeResource RequiredBrush}">*</Run></TextBlock>
                        </TextBox.Header>
                    </TextBox>
                    <TextBox>
                        <TextBox.Header>
                            <TextBlock><Run x:Uid="PropertiesDialog_Album"
                                     FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/><Run Foreground="{ThemeResource RequiredBrush}">*</Run></TextBlock>
                        </TextBox.Header>
                    </TextBox>
                    <TextBox>
                        <TextBox.Header>
                            <TextBlock><Run x:Uid="PropertiesDialog_AlbumArtist"
                                     FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/><Run Foreground="{ThemeResource RequiredBrush}">*</Run></TextBlock>
                        </TextBox.Header>
                    </TextBox>
                    <TextBox>
                        <TextBox.Header>
                            <TextBlock x:Uid="PropertiesDialog_Track"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </TextBox.Header>
                    </TextBox>
                    <TextBox>
                        <TextBox.Header>
                            <TextBlock x:Uid="PropertiesDialog_Year"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </TextBox.Header>
                    </TextBox>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2"
                            Padding="0,0,24,0"
                            Spacing="10">
                    <Border Width="254" Height="254"
                            Margin="0,30,0,0" Padding="0"
                            BorderBrush="{ThemeResource SolidBackgroundFillColorBaseAltBrush}"
                            BorderThickness="1" Canvas.ZIndex="0"
                            CornerRadius="5">
                        <Grid>
                            <Button Margin="2,0,0,2" HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                                    Canvas.ZIndex="1"
                                    Style="{StaticResource MenuButtonStyle}">
                                <FontIcon FontFamily="{StaticResource UntamedFontFamily}" Glyph="&#xE70F;"/>
                            </Button>
                            <Image/>
                            <Grid Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}" Canvas.ZIndex="0">
                                <FontIcon Canvas.ZIndex="0"
                                          FontFamily="{StaticResource UntamedFontFamily}"
                                          FontSize="80"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          Glyph="&#xE93C;"/>
                            </Grid>
                        </Grid>
                    </Border>
                    <TextBox>
                        <TextBox.Header>
                            <TextBlock x:Uid="PropertiesDialog_Genre"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </TextBox.Header>
                    </TextBox>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
